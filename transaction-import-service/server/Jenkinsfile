pipeline {
    agent any

    tools {
        maven 'Maven 3.3.9'
    }

    stages {
        stage('Clone repository') {
            steps {
                cleanWs()
                checkout scm
            }
        }

        stage('Build') {
            steps {
                dir('transaction-import-service/server') {
                    sh 'mvn -DskipTests clean package'
                }
            }
        }

        stage('Test') {
            steps {
                dir('transaction-import-service/server') {
                    sh 'mvn test'
                }
            }
        }

        stage('Push docker image') {
            steps {
                script {
                    docker.withRegistry(env.DOCKER_REGISTRY, 'nexus-docker-registry') {
                        docker.build("${env.JOB_NAME}:${env.BUILD_ID}", './transaction-import-service/server').push()
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    dir('transaction-import-service/server') {
                        sh "sed -i.bak 's/\$BUILD_ID/${env.BUILD_ID}/g' manifest.yaml"
                        sh "kubectl apply -f manifest.yaml"
                    }
                }
            }
        }
    }
}